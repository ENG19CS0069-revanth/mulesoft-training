JAVA CODE


INSERTING INTO TABLE

import="moviedatabase.ConnectionProvider"
import="java.sql.*"

String name=request.getParameter("name");
String mobilenumber=request.getParameter("mobilenumber");
String gender=request.getParameter("gender");
String actor id=request.getParameter("actor id");
try
{
	Connection con=ConnectionProvider.getCon();
	PreparedStatement ps=con.prepareStatement("insert into actor values(?,?,?,?)");
	ps.setString(1,actor id);
  ps.setString(2,name);
	ps.setString(3,mobilenumber);
	ps.setString(4,gender);
  ps.executeUpdate();
    }


UPDATE THE TABLE

import="moviedatabase.ConnectionProvider"
import="java.sql.*"

String email=request.getParameter("actor id");
String name=request.getParameter("name");
String mobilenumber=request.getParameter("mobilenumber");
String father=request.getParameter("gender");


try
{
	Connection con=ConnectionProvider.getCon();
	PreparedStatement ps=con.prepareStatement("update actor set actor id=?,name=?,mobilenumber=?,gender=? where id=?");
	ps.setString(1,actor id);
	ps.setString(2,name);
	ps.setString(3,mobilenumber);
	ps.setString(4,gender);
	ps.setString(5,id);
	ps.executeUpdate();
	response.sendRedirect("editDeleteList.jsp?msg=valid");
	}







MYSQL CODE


CREATE TABLE ACTOR (
    ACTID NUMERIC(3),
    ACTNAME VARCHAR(20),
    ACTGENDER char(1),
    PRIMARY KEY (ACTID)
);
CREATE TABLE DIRECTOR (
    DIRID NUMERIC(3),
    DIRNAME VARCHAR(20),
    DIRPHONE NUMERIC(10),
    PRIMARY KEY (DIRID)
);


CREATE TABLE MOVIES (
    MOVID NUMERIC(4),
    MOVTITLE VARCHAR(25),
    MOVYEAR NUMERIC(4),
    MOVLANG VARCHAR(12),
    DIRID NUMERIC(3),
    PRIMARY KEY (MOVID),
    FOREIGN KEY (DIRID)
        REFERENCES DIRECTOR (DIRID)
);




CREATE TABLE MOVIECAST (
    ACTID NUMERIC(3),
    MOVID NUMERIC(4),
    ROLE VARCHAR(10),
    PRIMARY KEY (ACTID , MOVID),
    FOREIGN KEY (ACTID)
        REFERENCES ACTOR (ACTID),
    FOREIGN KEY (MOVID)
        REFERENCES MOVIES (MOVID)
);




CREATE TABLE RATING (
    MOVID NUMERIC(4),
    REVSTARS VARCHAR(25),
    PRIMARY KEY (MOVID),
    FOREIGN KEY (MOVID)
        REFERENCES MOVIES (MOVID)
);



